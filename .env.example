# DocStream Configuration
# Copy this file to .env and fill in your values

# Anthropic API key (required for document extraction)
ANTHROPIC_API_KEY=sk-ant-...

# Database (default: local SQLite)
DATABASE_URL=sqlite+aiosqlite:///./docstream.db

# Extraction model (claude-haiku-4-5-20251001 is cheapest for vision)
EXTRACTION_MODEL=claude-haiku-4-5-20251001

# File upload settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=20

# Server
DEBUG=false

# Security â€” API key for FastAPI endpoints (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
API_KEY=
# Comma-separated allowed CORS origins
ALLOWED_ORIGINS=["http://localhost:8501","http://localhost:8502"]
